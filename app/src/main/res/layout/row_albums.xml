<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="2.5dp"
    android:paddingRight="2.5dp"
    android:paddingBottom="@dimen/dimen_5dp"
    tools:context="app.android.com.musichistory.ui.MainActivity">


    <ImageView
        android:id="@+id/iv_album_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/s_album_image"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_album_image"
        android:maxLines="1"
        android:textSize="@dimen/txt_size_15sp"
        android:textAlignment="center"
        android:ellipsize="end"
        android:padding="@dimen/dimen_10dp"
        android:id="@+id/tv_album_name"/>

</android.support.constraint.ConstraintLayout>
