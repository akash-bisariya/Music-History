<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/iv_song_image"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_previous"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_song_image"
        android:background="@drawable/ic_skip_previous_red_400_48dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_next"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/iv_song_image"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_skip_next_red_400_48dp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iv_play_pause"
        android:padding="@dimen/dimen_10dp"
        app:layout_constraintRight_toLeftOf="@id/iv_next"
        app:layout_constraintLeft_toRightOf="@id/iv_previous"
        android:background="@drawable/ic_play_circle_filled_red_400_48dp"
        app:layout_constraintTop_toBottomOf="@id/iv_song_image"/>

</android.support.constraint.ConstraintLayout>