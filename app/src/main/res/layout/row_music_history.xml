<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/dimen_10dp"
    android:paddingLeft="@dimen/dimen_10dp"
    android:paddingRight="@dimen/dimen_10dp"
    tools:context="app.android.com.musichistory.MainActivity">


    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/iv_song_image"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/tv_song_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:lines="1"
        android:paddingTop="@dimen/dimen_10dp"
        app:layout_constraintLeft_toRightOf="@id/iv_song_image"
        android:text="Song name"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/tv_song_duration"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:gravity="center"
        android:paddingRight="@dimen/dimen_10dp"
        android:text="Song duration"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_song_duration"/>


    <TextView
        android:id="@+id/tv_artist_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        android:text="Artist name"
        android:lines="1"
        app:layout_constraintLeft_toRightOf="@id/iv_song_image"
        app:layout_constraintEnd_toStartOf="@id/tv_song_duration"
        app:layout_constraintTop_toBottomOf="@id/tv_song_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="@dimen/dimen_10dp"
        android:paddingLeft="@dimen/dimen_10dp"
        android:paddingRight="@dimen/dimen_10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_song_duration"
        android:text="Played 2 times"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/tv_song_play_count"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/tv_artist_name"
        android:background="@android:color/darker_gray"
        />

</android.support.constraint.ConstraintLayout>
